#!/bin/sh

DOWNLOAD_URL="https://github.com/acoustid/chromaprint/releases/download/v1.5.0/chromaprint-1.5.0.tar.gz"
DOWNLOADED_DIR="chromaprint-v1.5.0"

BUILD_DIR=$1
VENDOR_DIR="vendor"

indent() {
  sed -u 's/^/       /'
}

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
curl -L --silent $DOWNLOAD_URL | tar xz
cd $DOWNLOADED_DIR
cmake -DCMAKE_BUILD_TYPE=Release -DBUILD_TOOLS=ON .
make
sudo make install

echo "Adding fpcalc to PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/fpcalc.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:vendor/'$DOWNLOADED_DIR'"' >> $PROFILE_PATH
